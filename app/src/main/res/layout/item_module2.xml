<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/course_logo"
            android:layout_width="72dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:src="@drawable/placeholder_image" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/module_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Kotlin Basic"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:text="Android Development"
                android:textAlignment="textStart"
                android:textColor="#B3B3B3"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Detailed"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <com.dagang.library.GradientButton
            android:id="@+id/shadow_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            app:button_end_color="#F4B63C"
            app:button_gradient_orientation="TOP_BOTTOM"
            app:button_is_shadowed="true"
            app:button_radius="20dp"
            app:button_shadow_angle="90"
            app:button_shadow_color="#FBE6BC"
            app:button_shadow_distance="2dp"
            app:button_shadow_radius="2dp"
            app:button_start_color="#FFEECE">

            <TextView
                android:id="@+id/number_of_lessons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal" />

        </com.dagang.library.GradientButton>


    </LinearLayout>

</androidx.cardview.widget.CardView>