<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/item_lesson_data"
    android:fillViewport="true"
    tools:context=".fragments.LessonData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/pop_back_stack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="34dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_vector__21_"
            android:contentDescription="@string/todo" />

        <LinearLayout
            android:layout_width="222dp"
            android:layout_height="328dp"
            android:layout_gravity="end"
            android:layout_marginTop="-55dp"
            android:background="@drawable/item_lesson_rectangle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/number_of_lesson"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/roboto_regular"
                android:text="1-lesson"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/name_of_lesson"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="7"
                android:text="@string/kotlin_dasturlash_tili_va_tarixi_kotlin_dasturlash_tili_va_tarixi_kotlin_dasturlash_tili_va_tarixi_kotlin_dasturlash_tili_va_tarixi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/lesson_data"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/kotlin_bu_android_dasturlarini_ishlab_chiqish_uchun_juda_mos_keladi_zamonaviy_tilning_barcha_afzalliklarini_android_platformasiga_hech_qanday_yangi_cheklovlarsiz_kiritadi_moslashuvchanlik_kotlin_jdk_6_ga_to_liq_mos_keladi_kotlin_ilovalari_eski_android_qurilmalarida_muammosiz_ishlashini_ta_minlaydi_kotlin_vositasi_android_studio_da_to_liq_qo_llab_quvvatlanadi_va_android_os_tizimiga_mos_keladi_samaradorlik_kotlin_loyihalarda_bytekod_tuzilishi_tufayli_java_ga_o_xshash_ekvivalent_kabi_tez_ishlaydi_kotlin_ning_ichki_funksiyalarini_qo_llab_quvvatlashi_bilan_lambdalardan_foydalanadigan_kod_ko_pincha_java_da_yozilgan_koddan_tezroq_ishlaydi"
            android:textAlignment="textStart"
            android:textColor="#7C7C7D"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:ignore="RtlCompat" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>