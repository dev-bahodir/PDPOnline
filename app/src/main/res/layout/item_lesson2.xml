<?xml version="1.0" encoding="utf-8"?>
<com.dagang.library.GradientButton xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shadow_btn"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:layout_marginStart="3dp"
    android:layout_marginTop="8dp"
    app:button_end_color="#F4B63C"
    app:button_gradient_orientation="TOP_BOTTOM"
    app:button_is_shadowed="true"
    app:button_radius="45dp"
    app:button_shadow_angle="90"
    app:button_shadow_color="#FBE6BC"
    app:button_shadow_distance="2dp"
    app:button_shadow_radius="2dp"
    app:button_start_color="#FFEECE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/number_of_lesson"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:text="lesson"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

</com.dagang.library.GradientButton>